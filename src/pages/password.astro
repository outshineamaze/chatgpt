---
import Layout from '../layouts/Layout.astro'
import Login from '../components/Login'
---

<Layout title="Password Protection">
  <Login client:load />
</Layout>

<style>
@keyframes shake {
  0% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(0.5rem);
  }
  75% {
    transform: translateX(-0.5rem);
  }
  100% {
    transform: translateX(0);
  }
}

.invalid {
  animation: shake 0.2s ease-in-out 0s 2;
}
</style>
